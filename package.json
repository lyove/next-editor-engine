{
  "name": "next-editor-engine",
  "version": "0.0.1",
  "description": "This is the core engine library of the editor, which has the basic functions required for general editing.",
  "main": "index.js",
  "author": "lyove",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "prettify": "prettier --write 'src/**/*.js'",
    "compile": "rimraf lib/* && npx babel src/engine --out-dir lib --copy-files"
  },
  "keywords": [
    "editor",
    "editor-engine",
    "next-editor-engine",
    "editor-engine-library"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.8",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "babel-loader": "^8.2.2",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "figlet": "^1.5.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "lint-staged": "^13.0.3",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^2.4.2",
    "prettier": "^2.4.1",
    "style-loader": "^3.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.4",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-checkboxes": "^1.0.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lyove/next-editor-engine.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "lint-staged": {
    "*.{js,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{less,css}": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
